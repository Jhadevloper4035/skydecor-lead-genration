<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Premium Lead Dashboard</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fc;
    }
    header h1 {
      font-weight: 700;
      color: #0d6efd;
    }
    .summary-card {
      border: none;
      border-radius: 12px;
      background: linear-gradient(135deg, #0d6efd, #6610f2);
      color: white;
    }
    .summary-card h5 {
      font-size: 1rem;
    }
    .summary-card .display-4 {
      font-weight: bold;
    }
    table thead th {
      font-weight: 600;
      white-space: nowrap;
    }
    table td {
      white-space: nowrap;
    }
    .scrollable-table {
      max-height: 500px;
      overflow-x: auto;
      overflow-y: auto;
    }
  </style>
</head>
<body>

<div class="container my-4">
  
  <nav class="navbar navbar-expand-lg navbar-light bg-light d-flex" style="justify-content: space-between;">
    <a href="/" class="text-decoration-none lh-1 me-3">
      <img src="/imgs/logo.png" alt="Company Logo" style="height:60px;">
    </a>
    <a href="/admin/download" class="btn btn-success shadow-sm">
      <i class="bi bi-file-earmark-excel"></i> Download Excel
    </a>
  </nav>

  <!-- Summary Cards -->
  <section class="row g-3 mb-4 mt-4">
    <div class="col-md-4">
      <div class="card summary-card shadow-sm text-center p-3">
        <h5>Total Leads from event</h5>
        <div class="display-4"><%= leads.filter(l => (l.leadType || '').toLowerCase() === 'event').length %></div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card summary-card shadow-sm text-center p-3">
        <h5>Total Leads from showroom</h5>
        <div class="display-4"><%= leads.filter(l => (l.leadType || '').toLowerCase() === 'showroom').length %></div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card summary-card shadow-sm text-center p-3">
        <h5>Total Leads</h5>
        <div class="display-4"><%= leads.length %></div>
      </div>
    </div>
  </section>

  <!-- Search -->
  <div class="mb-3">
    <input class="form-control shadow-sm" placeholder="Search leads..." id="leadSearch">
  </div>

  <!-- Scrollable Table -->
  <div class="scrollable-table shadow-sm rounded">
    <table class="table table-hover align-middle">
      <thead class="table-primary">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Mobile</th>
          <th>UserType</th>
          <th>ProductEnquire</th>
          <th>Company</th>
          <th>State</th>
          <th>City</th>
          <th>Representative</th>
          <th>Lead Type</th>
          <th>Place</th>
          <th>Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="leadTable">
        <% leads.forEach(lead => { %>
          <tr>
            <td><%= lead.fullName %></td>
            <td><%= lead.email %></td>
            <td><%= lead.countryCode %> <%= lead.mobileNumber %></td>
            <td><%= lead.UserType %></td>
            <td><%= lead.ProductEnquire %></td>
            <td><%= lead.companyName %></td>
            <td><%= lead.state %></td>
            <td><%= lead.city %></td>
            <td><%= lead.representative %></td>
            <td><%= lead.leadType %></td>
            <td><%= lead.place %></td>
            <td><%= new Date(lead.createdAt).toLocaleString() %></td>
            <td>
              <button class="btn btn-sm btn-outline-success"><i class="bi bi-telephone"></i></button>
              <button class="btn btn-sm btn-outline-info"><i class="bi bi-envelope"></i></button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Search Filter -->
<script>
  document.getElementById('leadSearch').addEventListener('keyup', function() {
    const filter = this.value.toLowerCase();
    document.querySelectorAll('#leadTable tr').forEach(row => {
      row.style.display = row.innerText.toLowerCase().includes(filter) ? '' : 'none';
    });
  });
</script>

</body>
</html>
